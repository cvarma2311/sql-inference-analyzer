# Database (required for SQL execution)
DB_HOST=
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_SSLMODE=               # e.g., require, prefer, disable
DB_SCHEMA=public          # default schema for SQL templates

# LLM and service defaults
LLM_URL=http://localhost:8001/v1/chat/completions
LLM_MODEL=local
LLM_TIMEOUT_S=30
LLM_RETRIES=2
LLM_RETRY_BACKOFF_S=0.5

# Logging
LOG_FORMAT=json            # json | text
LOG_LEVEL=INFO             # DEBUG | INFO | WARNING | ERROR
LOG_FILE=                  # optional file path
LOG_PLAN_OUTPUT=on         # on | off (planner output logs)
LOG_SQL_OUTPUT=on          # on | off (SQL text logs)
LOG_NARRATIVE_OUTPUT=on    # on | off (narrative logs)

# Planner
PLANNER_SCHEMA_CONTEXT=on  # on | off (include schema context in prompt)

# SQL executor
SQL_MAX_ROWS=1000          # max rows fetched per query

# Narrative
NARRATIVE_MAX_TOKENS=256

# Pipeline defaults (required for /analyze)
# Example: DEFAULT_START_DATE=2025-04-01
# Example: DEFAULT_END_DATE=2025-10-06
DEFAULT_START_DATE=
DEFAULT_END_DATE=

# Audit logging
AUDIT_LOG_DIR=audit_logs
