{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["objective", "time_range", "level", "drilldown_path", "driver_levels", "filters", "queries"],
  "properties": {
    "objective": {"type": "string"},
    "sbu": {"type": "string"},
    "time_range": {"type": "string"},
    "fiscal_year": {"type": "string"},
    "level": {
      "type": "string"
    },
    "drilldown_path": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["sbu", "zone", "region", "sales_area", "product"]
      },
      "minItems": 1
    },
    "driver_levels": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["sbu", "zone", "region", "sales_area", "product"]
      }
    },
    "filters": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sbu": {"type": "string"},
        "zone": {"type": "string"},
        "region": {"type": "string"},
        "sales_area": {"type": "string"},
        "product": {"type": "string"}
      }
    },
    "breakdowns": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 1
    },
    "queries": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "actual_by_level",
          "target_by_level",
          "gap_drivers_by_driver_levels",
          "actual_by_month",
          "target_by_month",
          "actual_by_zone_product",
          "target_by_zone_product"
        ]
      },
      "minItems": 1
    }
  }
}
